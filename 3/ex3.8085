(b)

FILL MACRO RP,X,K
	PUSH PSW
	PUSH H

	LXI H,RP
	MVI A,X

COUNTDOWN:
	MVI M,42H
	DCR A
	INX H
	JNZ COUNTDOWN

	POP H
	POP PSW
ENDM

(c)

RHLR MACRO n

	PUSH PSW
	PUSH D

	MVI A,04H
	CPI 00H
	JZ DONE
	MVI E,04H

LOOP1:
	MOV A,H
	RAR
	MOV H,A
	MOV A,L
	RAR
	MOV L,A
	DCR E
	JNZ LOOP1
DONE:
	POP D
	POP PSW
ENDM




